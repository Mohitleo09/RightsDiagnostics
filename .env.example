# MONGO_DB
MONGODB_URI="mongodb+srv://YOUR_USER:YOUR_PASSWORD@cluster0.example.mongodb.net/?retryWrites=true&w=majority"

SECRET_KEY="your_secret_key_here"

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_your_key_id_here

# TWILIO
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_SERVICE_SID="your_twilio_service_sid"
TWILIO_PHONE_NUMBER="+1234567890"

# OTP Development Mode (set to "false" for production)
ENABLE_OTP_BYPASS="false"

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Firebase Cloud Messaging (Optional - for push notifications)
FCM_SERVER_KEY=your_fcm_server_key_here

# WhatsApp Business API (Optional)
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_PHONE_ID=your_phone_id

# Google Maps API (Optional - for home collection)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# AWS S3 (Optional - for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=rightslab-uploads

# Application Settings
NODE_ENV=development
PORT=3000

# API Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Session Configuration
SESSION_SECRET=your-session-secret-key-here
SESSION_MAX_AGE=86400000

EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your_email_password_here

GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="YOUR_SECRET_HERE"

GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_api_key_here

# Cron Job API Key (for scheduled reminders)
CRON_API_KEY=your-secure-cron-api-key-here
